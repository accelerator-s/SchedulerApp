{
    "version": "2.0.0",
    "tasks": [
        {
            // 这个 label 就是任务的名称，可以被 launch.json 引用
            "label": "build",
            
            // 这个 type 告诉 VS Code 这个任务由 CMake Tools 扩展提供
            "type": "cmake",
            
            // "command" 指定了要执行的具体 CMake 命令
            "command": "build",
            
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "CMake build task"
        }
    ]
}